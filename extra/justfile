os := `cat /etc/os-release | grep "^NAME=" | cut -d "=" -f2 | tr -d '"'`

default:
  just --list

install-essential:
  if [ "{{os}}" = "Debian GNU/Linux" ] || [ "{{os}}" = "Ubuntu" ]; then
    sudo apt-get install build-essential libmysqlclient-dev
  elif [ "{{os}}" = "Arch Linux" ]; then
    sudo pacman -S base-devel mysql-devel
  fi

install-dbeaver:
  #!/bin/bash
  if [ "{{os}}" = "Ubuntu" ]; then
    sudo add-apt-repository ppa:serge-rider/dbeaver-ce
    sudo apt-get install dbeaver-ce
  fi

install-vault:
  # INFO: https://developer.hashicorp.com/vault/install
  wget -O - https://apt.releases.hashicorp.com/gpg | sudo gpg --dearmor -o /usr/share/keyrings/hashicorp-archive-keyring.gpg
  echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/hashicorp-archive-keyring.gpg] https://apt.releases.hashicorp.com $(grep -oP '(?<=UBUNTU_CODENAME=).*' /etc/os-release || lsb_release -cs) main" | sudo tee /etc/apt/sources.list.d/hashicorp.list
  sudo apt update && sudo apt install vault

install: install-essential install-vault install-dbeaver

config:
  @echo "config for extra is saved separatedly."

unset-config:
  @echo "not possible to unset all config for extra at once. Do it manually."
